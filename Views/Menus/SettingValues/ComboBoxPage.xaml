<ContentControl x:Class="WpfControlSamples.Views.Menus.ComboBoxPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="10" >

        <ComboBox ItemsSource="{Binding ItemsSource, Mode=OneTime}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />

        <Border Margin="20"
                Width="100" Height="100"
                Background="{Binding SelectedColor, Mode=OneWay,
                                     Converter={StaticResource ColorToBrushConverter}}" />

        <TextBlock Text="{Binding SelectedItem, Mode=OneWay}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" />

    </StackPanel>

</ContentControl>
