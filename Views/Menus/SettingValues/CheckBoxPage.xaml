<ContentControl x:Class="WpfControlSamples.Views.Menus.CheckBoxPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">

    <ContentControl.Resources>
        <Style TargetType="{x:Type CheckBox}" >
            <Setter Property="Margin" Value="10,10,0,0" />
        </Style>
    </ContentControl.Resources>

    <StackPanel Margin="10" >

        <CheckBox IsChecked="{Binding CheckFlag, Mode=TwoWay}" />

        <CheckBox IsChecked="{Binding CheckFlag, Mode=TwoWay, Converter={StaticResource NotBoolConverter}}" />

    </StackPanel>

</ContentControl>
