<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >

    <!-- 動的に読み込まれる xaml ファイル
            XamlReader.Load() で Exception が出る場合は、
            読み込み対象 xaml ファイルのビルドアクションを 「リソース」 にすること。
              "hexadecimal value 0x0C, is an invalid character. Line 1, position 1."
    -->

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="Bold" FontSize="{StaticResource FontSizeLarge}"
                   Foreground="Blue"
                   Text="DynamicLoadTarget.xaml" />
    </Grid>
</UserControl>
