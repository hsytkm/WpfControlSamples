<TabControl x:Class="WpfControlSamples.Views.Menus.LayoutMultipleMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >


    <TabItem Header="Grid" >
        <local:GridPage />
    </TabItem>

    <TabItem Header="GridSplitter" >
        <local:GridSplitterPage />
    </TabItem>

    <TabItem Header="UniformGrid" >
        <local:UniformGridPage />
    </TabItem>

    <TabItem Header="GroupBox" >
        <local:GroupBoxPage />
    </TabItem>

    <TabItem Header="StackPanel" >
        <local:StackPanelPage />
    </TabItem>

    <TabItem Header="DockPanel" >
        <local:DockPanelPage />
    </TabItem>

    <TabItem Header="WrapPanel" >
        <local:WrapPanelPage />
    </TabItem>

    <TabItem Header="Canvas" >
        <local:CanvasPage />
    </TabItem>

    <TabItem Header="TabControl" >
        <local:TabControlPage />
    </TabItem>

</TabControl>
