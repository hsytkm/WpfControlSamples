<TabControl x:Class="WpfControlSamples.Views.Menus.AnimationsMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="DoubleAnimation" >
        <local:DoubleAnimationPage />
    </TabItem>

    <TabItem Header="ColorAnimation" >
        <local:ColorAnimationPage />
    </TabItem>

    <TabItem Header="PointAnimation" >
        <local:PointAnimationPage />
    </TabItem>

    <TabItem Header="ThicknessAnimation" >
        <local:ThicknessAnimationPage />
    </TabItem>

    <TabItem Header="EasingAnimation" >
        <local:EasingAnimationPage />
    </TabItem>

    <TabItem Header="AnimationKeyFrames" >
        <local:DoubleAnimationUsingKeyFramesPage />
    </TabItem>

</TabControl>
