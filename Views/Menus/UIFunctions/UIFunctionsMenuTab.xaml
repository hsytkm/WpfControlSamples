<TabControl x:Class="WpfControlSamples.Views.Menus.UIFunctionsMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="ToolTip" >
        <local:ToolTipPage />
    </TabItem>

    <TabItem Header="Popup" >
        <local:PopupPage />
    </TabItem>

    <TabItem Header="Menu" >
        <local:MenuPage />
    </TabItem>

    <TabItem Header="MessageBox" >
        <local:MessageBoxPage />
    </TabItem>

    <TabItem Header="ToolBar" >
        <local:ToolBarPage />
    </TabItem>

    <TabItem Header="ContextMenu" >
        <local:ContextMenuPage />
    </TabItem>

    <TabItem Header="DispatcherObject" >
        <local:DispatcherObjectPage />
    </TabItem>
    
</TabControl>
