<Window  x:Class="WpfControlSamples.Views.Menus.ShowWindowSubDialog"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="150" Width="300"
         WindowStartupLocation="CenterScreen"
         ResizeMode="NoResize"
         Title="ShowWindowSubDialog" >

    <StackPanel Margin="10" >
        <TextBlock Margin="10,10,0,0"
                   Text="ShowWindowSubDialog" />

        <!-- ShowDialog() で表示すると、Button.Click で自動的に Window がクローズされる -->
        <StackPanel Orientation="Horizontal" >
            <Button Content="OK"
                    Margin="20" Padding="10" Width="100"
                    Click="Button_Click_True" />

            <Button Content="Cancel"
                    Margin="20" Padding="10" Width="100"
                    Click="Button_Click_False" />

        </StackPanel>
    </StackPanel>

</Window>
