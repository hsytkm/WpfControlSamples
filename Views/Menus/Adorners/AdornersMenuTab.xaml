<TabControl x:Class="WpfControlSamples.Views.Menus.AdornersMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <!-- MSDocs Adorners Overview
         https://docs.microsoft.com/ja-jp/dotnet/framework/wpf/controls/adorners-overview
    -->
    <TabItem Header="ResizableTextBox" >
        <local:ResizableTextBoxPage />
    </TabItem>

    <TabItem Header="GhostAdorner" >
        <local:GhostAdornerPage />
    </TabItem>

    <TabItem Header="ResizeHandleAdorner" >
        <local:ResizeHandleAdornerPage />
    </TabItem>

</TabControl>
