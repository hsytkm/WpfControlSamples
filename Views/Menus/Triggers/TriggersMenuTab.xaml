<TabControl x:Class="WpfControlSamples.Views.Menus.TriggersMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="Property" >
        <local:PropertyTriggerPage />
    </TabItem>

    <TabItem Header="Event" >
        <local:EventTriggerPage />
    </TabItem>

    <TabItem Header="Data" >
        <local:DataTriggerPage />
    </TabItem>

    <TabItem Header="MultiData" >
        <local:MultiDataTriggerPage />
    </TabItem>

</TabControl>
