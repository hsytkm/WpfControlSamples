<TabControl x:Class="WpfControlSamples.Views.Menus.TriggersMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="PropertyTrigger" >
        <local:PropertyTriggerPage />
    </TabItem>

    <TabItem Header="EventTriggerAction1" >
        <local:EventTriggerAction1Page />
    </TabItem>

    <TabItem Header="EventTriggerAction2" >
        <local:EventTriggerAction2Page />
    </TabItem>
    
    <TabItem Header="DataTrigger" >
        <local:DataTriggerPage />
    </TabItem>

    <TabItem Header="KeyTrigger" >
        <local:KeyTriggerPage />
    </TabItem>

    <TabItem Header="TimerTrigger" >
        <local:TimerTriggerPage />
    </TabItem>

    <TabItem Header="MultiTrigger" >
        <local:MultiTriggerPage />
    </TabItem>

    <TabItem Header="MultiDataTrigger" >
        <local:MultiDataTriggerPage />
    </TabItem>

    <TabItem Header="ConditionBehavior" >
        <local:ConditionBehaviorPage />
    </TabItem>
    
</TabControl>
