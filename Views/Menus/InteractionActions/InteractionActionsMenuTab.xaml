<TabControl x:Class="WpfControlSamples.Views.Menus.InteractionActionsMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="CallMethodAction" >
        <local:CallMethodActionPage />
    </TabItem>

    <TabItem Header="InvokeCommandAction" >
        <local:InvokeCommandActionPage />
    </TabItem>

    <TabItem Header="ChangePropertyAction" >
        <local:ChangePropertyActionPage />
    </TabItem>

    <TabItem Header="ControlStoryboardAction" >
        <local:ControlStoryboardActionPage />
    </TabItem>

    <TabItem Header="GoToStateAction" >
        <local:GoToStateActionPage />
    </TabItem>

    <TabItem Header="LaunchUriOrFileAction" >
        <local:LaunchUriOrFileActionPage />
    </TabItem>

    <TabItem Header="PlaySoundAction" >
        <local:PlaySoundActionPage />
    </TabItem>

    <TabItem Header="RemoveElementAction" >
        <local:RemoveElementActionPage />
    </TabItem>

    <TabItem Header="TriggerAction" >
        <local:TriggerActionPage />
    </TabItem>

</TabControl>
