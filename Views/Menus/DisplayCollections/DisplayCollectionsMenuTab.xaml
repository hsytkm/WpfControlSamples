<TabControl x:Class="WpfControlSamples.Views.Menus.DisplayCollectionsMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="ListBox(Single)" >
        <local:ListBoxPage />
    </TabItem>

    <TabItem Header="ListBox(Multiple)" >
        <local:ListBox2Page />
    </TabItem>

    <TabItem Header="ListView" >
        <local:ListViewPage />
    </TabItem>

    <TabItem Header="TreeView" >
        <local:TreeViewPage />
    </TabItem>

    <TabItem Header="DataGrid" >
        <local:DataGridPage />
    </TabItem>

    <TabItem Header="CollectionView" >
        <local:CollectionViewPage />
    </TabItem>

    <TabItem Header="CollectionSource" >
        <local:CollectionViewSourcePage />
    </TabItem>

</TabControl>
