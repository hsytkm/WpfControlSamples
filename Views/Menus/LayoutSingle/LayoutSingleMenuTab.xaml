<TabControl x:Class="WpfControlSamples.Views.Menus.LayoutSingleMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >


    <TabItem Header="Border" >
        <local:BorderPage />
    </TabItem>

    <TabItem Header="ScrollViewer" >
        <local:ScrollViewerPage />
    </TabItem>

    <TabItem Header="Expander" >
        <local:ExpanderPage />
    </TabItem>

    <TabItem Header="Viewbox" >
        <local:ViewboxPage />
    </TabItem>

    <TabItem Header="BulletDecorator" >
        <local:BulletDecoratorPage />
    </TabItem>

</TabControl>
