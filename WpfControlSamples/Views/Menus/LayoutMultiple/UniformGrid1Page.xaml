<ContentControl x:Class="WpfControlSamples.Views.Menus.UniformGrid1Page"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Margin="10" >
        <TextBlock DockPanel.Dock="Top"
                   Margin="0,10,0,0" FontSize="{StaticResource FontSizeMedium}"
                   Text="UniformGrid 1" />

        <TextBlock DockPanel.Dock="Top" Margin="10"
                   Text="Rows=4, Columns=3" />

        <UniformGrid Rows="4" Columns="3" >
            <Button>1</Button>
            <Button>2</Button>
            <Label Background="AliceBlue">3</Label>
            <Label Background="RosyBrown">4</Label>
            <Button>5</Button>
            <Label Background="Beige">6</Label>
            <Button>7</Button>
            <Button>8</Button>
            <CheckBox Background="DarkBlue">9</CheckBox>
            <Label Background="DarkGoldenrod">10</Label>
            <CheckBox Background="LightPink">11</CheckBox>
            <Label Background="Wheat">12</Label>
        </UniformGrid>
    </DockPanel>

</ContentControl>
