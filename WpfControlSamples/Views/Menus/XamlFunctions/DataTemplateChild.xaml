<UserControl
    x:Class="WpfControlSamples.Views.Menus.DataTemplateChild"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance {x:Type local:DataTemplateChildViewModel},
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  DataTemplate2Page で ViewModel を渡して View を生成するのに使っています  -->

    <TextBlock
        HorizontalAlignment="Stretch"
        Background="{Binding BgBrush}"
        Text="{Binding Name}" />
</UserControl>
