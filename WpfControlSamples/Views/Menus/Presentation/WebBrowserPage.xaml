<ContentControl x:Class="WpfControlSamples.Views.Menus.WebBrowserPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800" >

    <DockPanel Margin="10" >
        <TextBlock DockPanel.Dock="Top"
                   Margin="0,10,0,0" FontSize="{StaticResource FontSizeMedium}"
                   Text="WebBrowser" />

        <TextBlock DockPanel.Dock="Top" Margin="10,5" Foreground="Red"
                   Text="使ったことないし、使うことなさそう。" />

        <WebBrowser Margin="10"
                    Source="https://docs.microsoft.com/ja-jp/dotnet/framework/wpf/" />
    </DockPanel>

</ContentControl>
