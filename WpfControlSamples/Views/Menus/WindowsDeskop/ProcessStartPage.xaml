<ContentControl
    x:Class="WpfControlSamples.Views.Menus.ProcessStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel Margin="10">
        <TextBlock
            Margin="0,10"
            DockPanel.Dock="Top"
            FontSize="{StaticResource FontSizeMedium}"
            Text="ProcessStart" />

        <TextBlock
            Margin="10"
            DockPanel.Dock="Top"
            Text="外部アプリの呼び出し" />

        <Button
            Height="40"
            Margin="20"
            Click="HomeDirectoryButton_Click"
            Content="Open exe directory (explorer)"
            DockPanel.Dock="Top" />

        <ContentControl />
    </DockPanel>

</ContentControl>
