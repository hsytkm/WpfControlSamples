<TabControl x:Class="WpfControlSamples.Views.Menus.WindowsDeskopMenuTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlSamples.Views.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MyTabControlStyle2}" >

    <TabItem Header="SystemColors" >
        <local:SystemColorsPage />
    </TabItem>

    <TabItem Header="MouseCursor" >
        <local:MouseCursorPage />
    </TabItem>

    <TabItem Header="MessageBox" >
        <local:MessageBoxPage />
    </TabItem>

    <TabItem Header="ShowWindow" >
        <local:ShowWindowPage />
    </TabItem>

    <TabItem Header="ApplicationCommands" >
        <local:ApplicationCommandsPage />
    </TabItem>

    <TabItem Header="FileDialog" >
        <local:FileDialogPage />
    </TabItem>

    <TabItem Header="FileDrop" >
        <local:FileDropPage />
    </TabItem>

</TabControl>
